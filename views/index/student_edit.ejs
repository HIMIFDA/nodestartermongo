<%- include layouts/header.ejs %>
<%- include layouts/nav.ejs %>

<div class="container">
	<h1>Add Student</h1>

	<br><br>
	<form method="POST" action="/student/update/<%= student[0].id %>">
		
		<div class="form-group">
			<input type="text" name="name" placeholder="Name..." value="<%= student[0].name %>" class="form-control">
		</div>

		<div class="form-group">
			<input type="number" name="age" placeholder="Age..." value="<%= student[0].age %>" class="form-control">
		</div>

		<div class="form-group">
			<input type="text" name="hobby" placeholder="Hobby..." value="<%= student[0].hobby %>" class="form-control">
		</div>

		<div class="form-group">
			<input type="submit" name="submit" value="Store" class="btn btn-success">
		</div>

	</form>

</div>

